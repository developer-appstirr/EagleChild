<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primaryBlue"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_marginHorizontal="@dimen/x50"
            android:src="@drawable/location"
            android:layout_marginTop="@dimen/x32"
            android:layout_width="wrap_content"
            android:layout_height="350dp"/>


        <TextView
            android:layout_gravity="center"
            android:id="@+id/txtVPNStatus"
            android:layout_marginHorizontal="@dimen/x60"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Connected!"
            android:textSize="@dimen/s24"
            android:fontFamily="@font/redhatdisplay_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/txtLastStatus"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginHorizontal="@dimen/x60"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Last Check In Status"
            android:textSize="@dimen/s18"
            android:fontFamily="@font/redhatdisplay_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
           android:layout_marginVertical="@dimen/x64"
            android:id="@+id/btnAccountSetup"
            android:padding="@dimen/x16"
            android:fontFamily="@font/redhatdisplay_bold"
            android:layout_marginHorizontal="@dimen/x30"
            android:backgroundTint="@color/golden"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="@dimen/x60"
            android:text="Accounts Setup to Monitor"
            android:background="@drawable/ic_bg_button"
            android:textSize="@dimen/s16"

            />

    </LinearLayout>

</LinearLayout>



