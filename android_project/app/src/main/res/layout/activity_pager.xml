<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/x140"
        android:id="@+id/viewPager"/>

        <TextView
            android:layout_marginTop="-130dp"
            android:id="@+id/tvNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/x30"
            android:background="@drawable/ic_bg_button"
            android:backgroundTint="@color/golden"
            android:fontFamily="@font/redhatdisplay_bold"
            android:gravity="center"
            android:padding="@dimen/x16"
            android:text="Get Started"
            android:textColor="@color/black"
            android:textSize="@dimen/s16"
           />

    <LinearLayout
        android:id="@+id/indicatorLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal">


    </LinearLayout>




</LinearLayout>
