<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primaryBlue"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_marginTop="@dimen/x32"
            android:layout_marginBottom="@dimen/x48"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/x16"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1.7"
                android:textColor="@color/black"
                android:text="Upload over Wi-Fi only"
                android:textSize="@dimen/s18"
                android:fontFamily="@font/redhatdisplay_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Switch
                android:layout_weight=".3"
                android:checked="true"
                android:theme="@style/SCBSwitch"
                android:id="@+id/notificationSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


        </LinearLayout>


        <TextView
            android:layout_marginBottom="@dimen/x48"
            android:layout_marginHorizontal="@dimen/x16"
            android:textColor="@color/black"
            android:text="Test Monitoring"
            android:textSize="@dimen/s18"
            android:fontFamily="@font/redhatdisplay_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="@dimen/x48"
            android:layout_marginHorizontal="@dimen/x16"
            android:textColor="@color/black"
            android:text="Check for updates"
            android:textSize="@dimen/s18"
            android:fontFamily="@font/redhatdisplay_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="@dimen/x48"
            android:layout_marginHorizontal="@dimen/x16"
            android:textColor="@color/black"
            android:text="Reset media monitoring permission"
            android:textSize="@dimen/s18"
            android:fontFamily="@font/redhatdisplay_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/llEditProfile"
            android:layout_marginBottom="@dimen/x48"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/x16"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1.7"
                android:textColor="@color/black"
                android:text="Edit Profile"
                android:textSize="@dimen/s18"
                android:fontFamily="@font/redhatdisplay_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:rotation="180"
                android:layout_height="18dp"
                android:src="@drawable/ic_back"
                app:tint="@color/black" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llSignOut"
            android:layout_marginBottom="@dimen/x48"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/x16"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1.7"
                android:textColor="@color/black"
                android:text="Signout"
                android:textSize="@dimen/s18"
                android:fontFamily="@font/redhatdisplay_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_weight=".3"
                android:layout_width="0dp"
                android:rotation="180"
                android:layout_height="18dp"
                android:src="@drawable/ic_back"
                app:tint="@color/black" />


        </LinearLayout>



    </LinearLayout>

</LinearLayout>



