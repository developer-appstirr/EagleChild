<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_round_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/ivStoryboardingImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x300"
        android:layout_marginHorizontal="@dimen/x80"
        android:layout_marginVertical="@dimen/x32"
        />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/txtStoryboardingHeading"
        android:layout_marginHorizontal="@dimen/x60"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/s24"
        android:fontFamily="@font/redhatdisplay_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/txtStoryboardingDescription"
        android:layout_marginHorizontal="@dimen/x60"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/s18"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/x20"
        android:textSize="@dimen/s16"
        android:fontFamily="@font/redhatdisplay_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





